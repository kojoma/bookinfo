<p id="notice"><%= notice %></p>

<h1>本一覧</h1>

<%= link_to '本を登録する', new_book_path %>

<br>

<table>
  <thead>
    <tr>
      <th>ISBN</th>
      <th>タイトル</th>
      <th>出版社</th>
      <th>著者</th>
      <th>画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.publisher %></td>
        <td><%= book.author %></td>
        <td><%= image_tag book.image %></td>
        <td><%= link_to '詳細', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        <td><%= link_to '送信', book_evernote_post_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
