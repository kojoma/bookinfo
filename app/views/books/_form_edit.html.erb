    <%= error_span(@book[:asin]) %>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@book[:title]) %>
  </div>
  <div class="control-group">
    <%= f.label :publisher, :class => 'control-label' %>
