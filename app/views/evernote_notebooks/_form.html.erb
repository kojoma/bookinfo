      <%= select_tag 'evernote_notebook[guid]', options_from_collection_for_select(@notebooks, :first, :last, @evernote_notebook.guid), :class => 'form-control' %>
    </div>
    <%= error_span(@evernote_notebook[:guid]) %>
  </div>


  <%= f.submit '登録', :class => 'btn btn-primary' %>

<% end %>
